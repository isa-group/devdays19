{
    "id": "first",
    "version": "1.0.0",
    "iagree": "5.0.0",
    "type": "agreement",
    "context": {
        "validity": {
            "initial": "2018-01-01",
            "timeZone": "Europe/Madrid"
        },
        "infrastructure": {
            "registry": "http://registry.{{SERVICES_PREFIX}}{{DNS_SUFFIX}}/api/v6",
            "reporter": "http://reporter.{{SERVICES_PREFIX}}{{DNS_SUFFIX}}/api/v4",
            "render": "https://ui.{{SERVICES_PREFIX}}{{DNS_SUFFIX}}/render?model=/renders/SCO/produccion/sco-consultas-produccion.json&view=/renders/SCO/produccion/sco-consultas-produccion.html&ctrl=/renders/SCO/produccion/sco-consultas-produccion.js",
            "dashboard": "http://dashboard.{{SERVICES_PREFIX}}{{DNS_SUFFIX}}"
        },
        "definitions": {
            "schemas": {}
        },
        "scopes": {
            "development": {
                "member": {
                    "name": "Member",
                    "description": "Member of a project",
                    "type": "string"
                },
                "project": {
                    "name": "Project",
                    "description": "Project",
                    "type": "string",
                    "default": "project-01"
                },
                "class": {
                    "name": "Class",
                    "description": "Group some projects",
                    "type": "string",
                    "default": "CS169"
                }
            }
        },
        "computers": {
            "pivotaltracker": {
                "url": "http://pt.computer.{{SERVICES_PREFIX}}{{DNS_SUFFIX}}:8080",
                "apiVersion": "1",
                "config": {
                    "measures": "http://registry.{{SERVICES_PREFIX}}{{DNS_SUFFIX}}/static/SCO_IO.json",
                    "schedules": {
                        "24x7": "L-DT00:00-23:59/H",
                        "normal": "[{\"from\":\"1/1\",\"to\":\"6/14\",\"schedule\":\"L-VT09:00-18:00/H\"},{\"from\":\"6/15\",\"to\":\"9/15\",\"schedule\":\"L-VT08:30-15:00/H\"},{\"from\":\"9/16\",\"to\":\"12/23\",\"schedule\":\"L-VT09:00-18:00/H\"},{\"from\":\"12/24\",\"to\":\"12/24\",\"schedule\":\"L-VT09:00-13:00/H\"},{\"from\":\"12/25\",\"to\":\"12/30\",\"schedule\":\"L-VT09:00-18:00/H\"},{\"from\":\"12/31\",\"to\":\"12/31\",\"schedule\":\"L-VT09:00-13:00/H\"}]"
                    },
                    "holidays": "http://registry.{{SERVICES_PREFIX}}{{DNS_SUFFIX}}/static/holidays.json"
                }
            }
        }
    },
    "terms": {
        "metrics": {
            "NUMBER_OF_STARTED_STORIES": {
                 "computer": {
                    "$ref": "#/context/definitions/computers/pivotaltracker",
                    "name": "/indicators/NUMBER_OF_STARTED_STORIES"
                },
                "measure": {
                    "computing": "actual",
                    "element": "number",
                    "filters": {
                        "type": "feature,bug,chore,release",
                        "state": "started"
                    },
                    "scope": {
                        "$ref": "#/context/scopes/development"
                    }
                }
            },
            "STARTED_STORIES": {
                 "computer": {
                    "$ref": "#/context/definitions/computers/pivotaltracker",
                    "name": "/indicators/STARTED_STORIES"
                },
                "measure": {
                    "computing": "actual",
                    "element": "stories",
                    "filters": {
                        "type": "feature,bug,chore,release",
                        "state": "started"
                    },
                    "scope": {
                        "$ref": "#/context/scopes/development"
                    }
                }
            },
            "POINTED_BEFORE_BACKLOG": {
                 "computer": {
                    "$ref": "#/context/definitions/computers/pivotaltracker",
                    "name": "/indicators/POINTED_BEFORE_BACKLOG"
                },
                "measure": {
                    "computing": "actual",
                    "element": "number",
                    "filters": {
                        "type": "feature",
                        "state": "unstarted",
                        "estimate": -1
                    },
                    "scope": {
                        "$ref": "#/context/scopes/development"
                    }
                }
            },
            "STARTED_STORY_PRIORITY": {
                 "computer": {
                    "$ref": "#/context/definitions/computers/pivotaltracker",
                    "name": "/indicators/STARTED_STORY_PRIORITY"
                },
                "measure": {
                    "computing": "actual",
                    "element": "priority",
                    "filters": {
                        "type": "feature,bug,chore,release",
                        "state": "started"
                    },
                    "scope": {
                        "$ref": "#/context/scopes/development"
                    }
                }
            }
        },
        "guarantees": [
            {
                "id": "ONE_STORY_AT_A_TIME",
                "scope": {
                    "member": {
                        "$ref": "#/context/scopes/development/member"
                    }
                },
                "of": [
                    {
                        "scope": {
                            "member": "*"
                        },
                        "objective": "NUMBER_OF_STARTED_STORIES <= 1",
                        "with": {
                            "NUMBER_OF_STARTED_STORIES": {}
                        },
                        "window": {
                            "type": "static",
                            "period": "yearly",
                            "initial": "2018-01-01"
                        },
                        "evidences": [
                            {
                                "STARTED_STORIES": {
                                    "$ref": "#/terms/metrics/STARTED_STORIES"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "id": "POINTED_BEFORE_BACKLOG_GUARANTEE",
                "scope": {
                    "member": {
                        "$ref": "#/context/scopes/development/member"
                    }
                },
                "of": [
                    {
                        "scope": {
                            "member": "*"
                        },
                        "objective": "POINTED_BEFORE_BACKLOG == 0",
                        "with": {
                            "POINTED_BEFORE_BACKLOG": {}
                        },
                        "window": {
                            "type": "static",
                            "period": "yearly",
                            "initial": "2018-01-01"
                        }
                    }
                ]
            },
            {
                "id": "STARTED_STORY_PRIORITY_GUARANTEE",
                "scope": {
                    "member": {
                        "$ref": "#/context/scopes/development/member"
                    }
                },
                "of": [
                    {
                        "scope": {
                            "member": "*"
                        },
                        "objective": "STARTED_STORY_PRIORITY <= 1",
                        "with": {
                            "STARTED_STORY_PRIORITY": {}
                        },
                        "window": {
                            "type": "static",
                            "period": "yearly",
                            "initial": "2018-01-01"
                        }
                    }
                ]
            }
        ]
    }
    
}
